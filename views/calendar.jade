extends ./base.jade
append stylesheets
	link(href='/stylesheets/fullcalendar/fullcalendar.css',rel='stylesheet')
	link(href='/stylesheets/fullcalendar/fullcalendar.print.css',rel='stylesheet')
block title
	title Cream Culture - Calendar
block body
	body.calendar
		block head
			header#header
				br
				div.container
					div.row
						div(class='col-lg-4')
							a(href='dashboard',class='back')
								<i class="fa fa-angle-left"></i> back to home
						div(class='col-lg-4')
							div#logo
								h5 CREAM CULTURE CALENDAR
						div(class='col-lg-4')
							ul(id='nav',class='pull-right list-unstyled list-inline clearfix')
								li.logged-user.no-border
									div.btn-group.pull-right
										button(type="button",class="btn btn-default")
											span.avatar: img#navProfilePicture(src='/api/getProfilePicture')
											span MARY S.
										button(type="button",class="btn dropdown-toggle",data-toggle="dropdown")
											span.caret
											span.sr-only Toggle Dropdown
										ul(class="dropdown-menu",role="menu")
											li: a Action
				br
		block content
			div.container
				div.row
					div.col-lg-12
						ul(class='list-unstyled calendar-tools')
							li.filter
								small filter by
								input(type="text")
								i.fa.fa-sort-asc
							li.search
								small search
								input(type="text")
								i.fa.fa-search
						div#calendar

		#eventModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
			.modal-dialog
				.modal-content
					.modal-body
						h1
							label#eventTitle
							img#eventImg.pull-right(style='margin-bottom:10px')
						table.table.table-bordered(style='width:100%')
							tr
								td(width='20%') Description
								td
									label#eventDescription
							tr
								td Location
								td
									label#eventLocation
							tr
								td Start Date
								td
									label#eventStart
							tr
								td End Date
								td
									label#eventEnd
						table.table(style='width:100%')
							tr
								td(width='50%')
									butto.btn.btn-primary(id="attendEvent", type="button") Attend
								td
									butto.btn.btn-primary(id="deleteEvent", type="button") Delete


		append jscripts
			script(src='/libs/jquery-1.11.0.min.js',type='text/javascript')
			script(src='/libs/jquery.cookie.js',type='text/javascript')
			script(src='/libs/bootstrap.js',type='text/javascript')
			script(src='/libs/jquery-ui-1.10.2.custom.min.js',type='text/javascript')
			script(src='/libs/fullcalendar.min.js',type='text/javascript')
			script(src='/javascripts/calendar.js',type='text/javascript')
