extends ./base.jade
append stylesheets
	link(href='/stylesheets/jquery.fancybox.css?v=2.1.2',rel='stylesheet',media='screen')
block title
	title Cream Culture - Home
block body
	body.home
		block head
			header#header
				div.container
					div.row
						div.col-lg-12
							div.social-bar
								ul(class='pull-right list-unstyled list-inline')
									li
										a: img(class='fb',src='/images/fb.png')
									li
										a: img(class='tw',src='/images/tw.png')
									li
										a: img(class='gp',src='/images/g+.png')
					div.row
						div(class='col-lg-3')
							div#logo
								h5 CREAM CULTURE
						div(class='col-lg-9')
							ul(id='nav',class='pull-right list-unstyled list-inline clearfix')
								li
									a magazine
								li
									a store
								li
									a#login(href="#dialog-form") login
								li
									a.join-us(href="/register") join us
		block content
			div.container
				div.row
					div#event-advertiser
						ul(class='events list-unstyled')
							li.event.clearfix
								section.edate
									div.month
										p september
										p.bline	___
										- for (var x = 3; x <= 9; x++)
											p.line(class="l"+x) __
									div.day 04
								section.description
									p.ename int'l freeski film festival
									p.location montreal, ca, usa
							li.event.active
								section.edate
									div.month
										p september
										p.bline	___
										- for (var x = 3; x <= 5; x++)
											p.line(class="l"+x) __
									div.day 28
								section.description
									p.ename coldwater classic
									p.location santa cruz, ca, usa
				div.hidden
					div#dialog-form
						header
							span.title login
							span#close-form.fa.fa-times.pull-right
						form#userLoginForm(name="userloginForm")
							div#field-area
								ul.list-unstyled.list-inline
									li: label USERNAME
									li: input(name="username", id="username")
								ul.list-unstyled.list-inline
									li: label PASSWORD
									li: input(name="password" type="password")
								span forgot your password? <a class="ch">click here</a>
							footer
								ul.list-unstyled.list-inline
									li
										label <input type="checkbox"> remember me
									li.pull-right
										button(type="submit") LOGIN

		block jscripts
			script(src='/libs/jquery-1.11.0.min.js',type='text/javascript')
			script(src='/libs/jquery.cookie.js',type='text/javascript')
			script(src='/libs/jquery-migrate-1.2.1.min.js',type='text/javascript')
			script(src='/libs/bootstrap.js',type='text/javascript')
			script(src='/libs/jquery.fancybox.pack.js',type='text/javascript')
			script(src='/javascripts/login.js',type='text/javascript')